<div class="container-fluid vh-100" style="background-color:white;">
     <button type="button" onclick="window.location.href='/patientdashboard'" class="btn btn-danger mt-5 ms-5" style="background-color:#721B09; color:white;">Back</button>
     <div class="row justify-content-center h-100">
        <div class="card w-50 my-auto mt-5 shadow">
            <div class="card-header text-center">
                <div class="row">
                    <div class="col-6">
                        <img src="../images/Logo-PKU.png" alt="utm-pku-logo" style="width: 13vw; height: 7vh">
                    </div>
                    <div class="col-6">
                        <h2 class="text-center p-2" style="color:#721B09;">Book Appointment</h2>
                    </div>
                </div>
            </div>
            <div class="card-body"> 
                <form class="p-5" action="/bookappointments" method="POST" enctype="application/json">
                    {{#if message}}
                        <div class="alert alert-danger" role="alert">
                            {{message}}  
                        </div>
                    {{/if}} 
                    <div style="color:#721B09;">   
                        You can book the appointments from 9:00 am untill 5:00 pm, Friday -> 9:00 am untill 12:00 pm
                    </div>
                    <br>
                    <div class="form-group">   
                        <input type="text" id="matric_no" class="form-control" name="matric_no" placeholder="Matric no."><br>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <input type="date" id="booking_date" class="form-control" name="booking_date" placeholder="Date">
                        </div>
                        <div class="col-6">
                            <select class="form-select" id="booking_time" name="booking_time" aria-label="Default select example">
                                <option selected>Choose Booking Time</option>
                                <option value="9:00 am">9:00 am</option>
                                <option value="9:30 am">9:30 am</option>
                                <option value="10:00 am">10:00 am</option>
                                <option value="10:30 am">10:30 am</option>
                                <option value="11:00 am">11:00 am</option>
                                <option value="11:30 am">11:30 am</option>
                                <option value="12:00 pm">12:00 pm</option>
                                <option value="12:30 pm">12:30 pm</option>
                                <option value="1:00 pm">1:00 pm</option>
                                <option value="1:30 pm">1:30 pm</option>
                                <option value="2:00 pm">2:00 pm</option>
                                <option value="2:30 pm">2:30 pm</option>
                                <option value="3:00 pm">3:00 pm</option>
                                <option value="3:30 pm">3:30 pm</option>
                                <option value="4:00 pm">4:00 pm</option>
                                <option value="4:30 pm">4:30 pm</option>
                                <option value="5:00 pm">5:00 pm</option>
                            </select>
                        </div>
                    </div>
                    <br>
                    <input id="book-pop-up" type="submit" class="btn btn-block w-100" style="background-color:#721B09; color:white;" value="Book" />
                </form>
            </div>
        </div>
     </div>
</div>

<script>
    $(function(){
    var dtToday = new Date();
    
    var month = dtToday.getMonth() + 1;
    var day = dtToday.getDate();
    var year = dtToday.getFullYear();
    if(month < 10)
        month = '0' + month.toString();
    if(day < 10)
        day = '0' + day.toString();
    
    var maxDate = year + '-' + month + '-' + day;

    // or instead:
    // var maxDate = dtToday.toISOString().substr(0, 10);

    
    $('#booking_date').attr('min', maxDate);
});
</script>