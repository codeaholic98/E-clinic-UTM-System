<div class="container-fluid pb-5 vh-110">
    <button type="button" onclick="window.location.href='/patientdashboard'" class="btn btn-danger mt-5 ms-5" style="background-color:#721B09; color:white;">Back</button>
     <div class="row justify-content-center p-5 h-100">
        <div class="card w-75 my-auto shadow">
            <div class="card-header text-center">
                <div class="row">
                    <div class="col-6">
                        <img src="../images/Logo-PKU.png" alt="utm-pku-logo" style="width: 13vw; height: 7vh">
                    </div>
                    <div class="col-6">
                        <h2 class="text-center p-2" style="color:#721B09;">Upcoming Activities</h2>
                    </div>
                </div>
            </div>
            <div class="card-body p-5">
                {{#if data}} 
                    <div class="row">
                        {{#each data}}
                            <figure class="figure">
                            <img src="../uploads/{{this.file}}" class="figure-img img-fluid rounded" alt="activity_img" style="width: 100%;">
                            <figcaption class="figure-caption text-center">{{this.activity_name}}</figcaption>
                            </figure>
                            <br>
                        {{/each}}
                    </div>
                {{else}}
                    {{#if message}}
                        <div class="alert alert-warning" role="alert">
                            {{message}}
                        </div>
                    {{/if}}
                {{/if}}
            </div>
            <div class="card=footer">
                <button class="btn btn-block w-100" onclick="window.location.href='/patientdashboard'" style="background-color:#721B09; color:white; " value="submit">Back</button><br><br>
            </div>
        </div>
     </div>
</div>