<div class="container-fluid pb-5 vh-110" style="background-color:#721B09;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">E-clinic UTM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                </ul>
            </div>
            <p class="text-xs-left"><b>Helpline:</b> +60187603124 or <b>Email:</b> <a>smyamin@outlook.com</a></p>
        </div>
    </nav>
     <div class="row justify-content-center p-5 h-100">
        <div class="card w-50 my-auto shadow">
            <div class="card-header text-center">
                <div class="row">
                    <div class="col-6">
                        <img src="../images/Logo-PKU.png" alt="utm-pku-logo" style="width: 13vw; height: 7vh">
                    </div>
                    <div class="col-6">
                        <h2 class="text-center p-2" style="color:#721B09;">Sign up</h2>
                    </div>
                </div>
            </div>
            <div class="card-body"> 
                <p style="color:#721B09;">Please fill up the form to create an account!</p>
                <br>
                {{#if success}}
                    <div class="alert alert-success" role="alert">
                        successsss
                    </div>
                {{else}}
                    {{#if errors}}
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                {{#each errors}}
                                    <li>{{this.msg}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    {{/if}}
                    <form action="/register" method="POST" enctype="application/json">
                        <div class="form-group">   
                            <label for="username" style="color:#721B09;">Username: </label><br>
                            <input type="text" id="username" class="form-control" name="username" placeholder="Username"><br>
                        </div>
                        <div class="form-group">   
                            <label for="name" style="color:#721B09;">Name: </label><br>
                            <input type="text" id="name" class="form-control" name="name" placeholder="Name"><br>
                        </div>
                        <div class="form-group">   
                            <label for="email" style="color:#721B09;">Email: </label><br>
                            <input type="email" id="email" class="form-control" name="email" placeholder="Email"><br>
                        </div>
                        <div class="form-group">
                            <label for="password" style="color:#721B09;">Password:</label><br>
                            <input type="password" id="password" class="form-control" name="password" placeholder="Password"><br>
                        </div>
                        <div class="form-group">
                            <label for="matric_no" style="color:#721B09;">Matric no.:</label><br>
                            <input type="text" id="matric_no" class="form-control" name="matric_no" placeholder="Matric no."><br>
                        </div>
                        <div class="form-group">
                            <label for="ic_no" style="color:#721B09;">IC no.:</label><br>
                            <input type="text" id="ic_no" class="form-control" name="ic_no" placeholder="IC no."><br>
                        </div>
                        <div class="form-group">
                            <label for="age" style="color:#721B09;">Age:</label><br>
                            <input type="text" id="age" class="form-control" name="age" placeholder="Age"><br>
                        </div>
                        <div class="form-group">
                        <p style="color:#721B09;">Gender:</p>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="gender" value="Male">
                            <label class="form-check-label" for="gender">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="gender" value="Female">
                            <label class="form-check-label" for="gender">Female</label>
                        </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="phone_no" style="color:#721B09;">Phone_no.:</label><br>
                            <input type="text" id="phone_no" class="form-control" name="phone_no" placeholder="Phone_no."><br><br>
                        </div>
                        <button class="btn btn-block w-100" style="background-color:#721B09; color:white; " value="submit">Sign up</button>
                    </form>
                {{/if}}  
            </div>
            <div class="card=footer">

            </div>
        </div>
     </div>
</div>