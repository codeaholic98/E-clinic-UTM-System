<div class="container-fluid vh-110" style="background-color:#721B09;">
     <div class="row justify-content-center h-100">
        <div class="card w-50 my-auto shadow">
            <div class="card-header text-center">
                <img src="../images/Logo-PKU.png" alt="utm-pku-logo" style="width: 13vw; height: 7vh">
            </div>
            <div class="card-body"> 
                <br><h2 class="text-center" style="color:#721B09;">Sign Up to PKU UTM</h2><br>
                {{#if success}}
                    <div class="alert alert-success" role="alert">
                        successsss
                    </div>
                {{else}}
                    {{#if errors}}
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                {{#each errors}}
                                    <li>{{this.msg}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    {{/if}}
                    <form action="/register" method="POST" enctype="application/json">
                        <div class="form-group">   
                            <label for="username" style="color:#721B09;">Username: </label><br>
                            <input type="text" id="username" class="form-control" name="username" placeholder="Username"><br>
                        </div>
                        <div class="form-group">   
                            <label for="name" style="color:#721B09;">Name: </label><br>
                            <input type="text" id="name" class="form-control" name="name" placeholder="Name"><br>
                        </div>
                        <div class="form-group">   
                            <label for="email" style="color:#721B09;">Email: </label><br>
                            <input type="email" id="email" class="form-control" name="email" placeholder="Email"><br>
                        </div>
                        <div class="form-group">
                            <label for="password" style="color:#721B09;">Password:</label><br>
                            <input type="password" id="password" class="form-control" name="password" placeholder="Password"><br>
                        </div>
                        <div class="form-group">
                            <label for="matric_no" style="color:#721B09;">Matric no.:</label><br>
                            <input type="text" id="matric_no" class="form-control" name="matric_no" placeholder="Matric no."><br>
                        </div>
                        <div class="form-group">
                            <label for="ic_no" style="color:#721B09;">IC no.:</label><br>
                            <input type="text" id="ic_no" class="form-control" name="ic_no" placeholder="IC no."><br>
                        </div>
                        <div class="form-group">
                            <label for="age" style="color:#721B09;">Age:</label><br>
                            <input type="text" id="age" class="form-control" name="age" placeholder="Age"><br>
                        </div>
                        <div class="form-group">
                            <label for="gender" style="color:#721B09;">Gender:</label><br>
                            <input type="text" id="gender" class="form-control" name="gender" placeholder="Gender"><br>
                        </div>
                        <div class="form-group">
                            <label for="phone_no" style="color:#721B09;">Phone_no.:</label><br>
                            <input type="text" id="phone_no" class="form-control" name="phone_no" placeholder="Phone_no."><br><br>
                        </div>
                        <button class="btn btn-block w-100" style="background-color:#721B09; color:white; " value="submit">Sign Up</button>
                    </form>
                {{/if}}  
            </div>
            <div class="card=footer">

            </div>
        </div>
     </div>
</div>