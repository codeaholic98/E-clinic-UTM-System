<div class="container-fluid vh-100" style="background-color:white;">
    <button type="button" onclick="window.location.href='/viewpatientreport'" class="btn btn-danger mt-5 ms-5" style="background-color:#721B09; color:white;">Back</button>
     <div class="row justify-content-center h-100">
        <div class="card w-50 my-auto shadow">
            <div class="card-header text-center">
                <div class="row">
                    <div class="col-6">
                        <img src="../images/Logo-PKU.png" alt="utm-pku-logo" style="width: 13vw; height: 7vh">
                    </div>
                    <div class="col-6">
                        <h2 class="text-center p-2" style="color:#721B09;">Prescription</h2>
                    </div>
                </div>
            </div>
            <div class="card-body"> 

                <div style="color:#721B09;" class="container">
                    <h3>Patient's Details:</h3><br>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        Name:
                        </div>
                        <div class="col">
                        {{prescription.patient.name}}
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        Age:
                        </div>
                        <div class="col">
                        {{prescription.patient.age}}
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        Gender:
                        </div>
                        <div class="col">
                        {{prescription.patient.gender}}
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        Matric no.:
                        </div>
                        <div class="col">
                        {{prescription.patient.matric_no}}
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        IC no.:
                        </div>
                        <div class="col">
                        {{prescription.patient.ic_no}}
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        Phone no.:
                        </div>
                        <div class="col">
                        {{prescription.patient.phone_no}}
                        </div>
                    </div>
                </div>  
                <br>
                
                <div style="color:#721B09;" class="container">
                    <h3>Patient's Prescription:</h3><br>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        Type:
                        </div>
                        <div class="col">
                        {{prescription.prescription_type}}
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        Date:
                        </div>
                        <div class="col">
                        {{prescription.issue_date}}
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col">
                        Details:
                        </div>
                        <div class="col">
                        {{prescription.prescription_details}}
                        </div>
                    </div>
                </div>    
                <br><br>
            </div>

            <div class="card=footer">
                <button class="btn btn-block w-100" onclick="window.location.href='/viewpatientreport'" style="background-color:#721B09; color:white; " value="submit">Back</button><br><br>
            </div>
        </div>
     </div>
</div>